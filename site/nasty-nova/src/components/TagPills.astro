---
export interface Props { tags: Record<string, string[]> }
const { tags } = Astro.props;
// Flatten category groups (情緒/モチーフ/仕掛け etc.) into unique tag list
const flat: string[] = Array.from(new Set(
  Object.values(tags || {}).flat()
));
---
<div class="meta" style="margin-top:8px;">
  {flat.map((t) => (
    <a class="pill" href={`/tags/${encodeURIComponent(t)}`}>#{t}</a>
  ))}
</div>
